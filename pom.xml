    <groupId>com.bizcenter.freight</groupId>
    <artifactId>bizcenter-freight</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>bizcenter-freight-api</module>
        <module>bizcenter-freight-apiserver</module>
        <module>bizcenter-freight-bizservice</module>
        <module>bizcenter-freight-infrastructure</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
        <spring-boot-admin.version>2.1.6</spring-boot-admin.version>
        <spring-cloud.version>Greenwich.SR3</spring-cloud.version>
        <baseFrameworkVersion>3.0.0-SNAPSHOT</baseFrameworkVersion>
    </properties>


